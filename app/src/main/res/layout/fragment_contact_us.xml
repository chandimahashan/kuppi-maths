<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactUsFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/contact_uc_emailCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        app:defaultNavHost="true"
        android:padding="4dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/contact_us_emailCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="0dp">

                <ImageView
                    android:id="@+id/contact_us_EmailImage"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:scrollbarSize="20dp"
                    android:src="@drawable/baseline_email_24" />

                <TextView
                    android:id="@+id/contact_us_emailText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@id/contact_us_EmailImage"
                    android:text="Email:"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/contact_us_email"
                    android:layout_width="300dp"
                    android:layout_height="32dp"
                    android:layout_below="@id/contact_us_emailText"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="2dp"
                    android:autoLink="email"
                    android:linksClickable="true"
                    android:layout_toEndOf="@id/contact_us_EmailImage"
                    android:layout_toRightOf="@id/contact_us_EmailImage"
                    android:text="chandimahashan111@gmail.com"
                    android:textSize="16dp"
                    android:textStyle="italic" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/contact_us_phoneNumberCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/contact_us_PhoneImage"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:scrollbarSize="20dp"
                    android:src="@drawable/baseline_call_24" />

                <TextView
                    android:id="@+id/contact_us_PhoneNumberText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_toEndOf="@id/contact_us_PhoneImage"
                    android:text="Phone number:"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/contact_us_phoneNumber"
                    android:layout_width="300dp"
                    android:layout_height="32dp"
                    android:layout_below="@id/contact_us_PhoneNumberText"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_toEndOf="@id/contact_us_PhoneImage"
                    android:layout_toRightOf="@id/contact_us_PhoneImage"
                    android:inputType="phone"
                    android:autoLink="phone"
                    android:linksClickable="true"
                    android:text="077 3460312"
                    android:textSize="16dp" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:padding="20dp">

                <ImageView
                    android:id="@+id/contact_us_linkdinLogo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="10dp"
                    android:src="@drawable/untitled_design__29_" />


                <ImageView
                    android:id="@+id/contact_us_youtubeLogo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_toEndOf="@id/contact_us_linkdinLogo"
                    android:padding="10dp"
                    android:src="@drawable/untitled_design__30_" />


                <ImageView
                    android:id="@+id/contact_us_faceBookLogo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_toEndOf="@id/contact_us_youtubeLogo"
                    android:padding="10dp"
                    android:src="@drawable/untitled_design__31_" />

            </RelativeLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.drawerlayout.widget.DrawerLayout>